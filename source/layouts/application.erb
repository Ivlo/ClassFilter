<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"/>
    <meta name="apple-mobile-web-app-capable" content="yes"/>

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>
    
    <!--[if lt IE 9]>
    <%= javascript_include_tag  "html5shiv" %>
    <![endif]-->

    <!--[if lte IE 9]>
    <%= stylesheet_link_tag "stylesheets.ie" %>
    <![endif]-->
    
    <%= stylesheet_link_tag "stylesheets" %>
    
    <%= yield_content :after_css %>
  </head>
  
  <body>
    <%= shared "header" %>
    <%= yield %>
    <%= shared "footer" %>

    <% if development? %><%= shared "dev_scripts" %><% end %>
    <%= javascript_include_tag  "jquery", "all.fn", "all","filter.js" %>

    <%= yield_content :after_js %>
  </body>
</html>